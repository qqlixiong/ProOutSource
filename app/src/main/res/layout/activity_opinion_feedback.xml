<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/activity_opinion_feedback"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:top="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="10dp"
    tools:context="com.lixiong.straight.my.settings.activity.OpinionFeedbackActivity">

    <com.lixiong.straight.view.TopBar
        android:id="@+id/top_opinion_feedback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        top:top_bar_type="tv_save"
        top:tv_title="意见与反馈"/>

    <EditText
        android:id="@+id/et_opinion_feedback"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        style="@style/cursor_edit_text_style"
        android:textColorHint="@color/color_edit_a_hint"
        android:layout_below="@id/top_opinion_feedback"
        android:background="@color/white"
        android:textSize="13sp"
        android:gravity="left|top"
        android:hint="请输入您宝贵的意见"
        android:paddingTop="20dp"
        android:paddingLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:id="@+id/rl_fill_sub_num">

        <TextView
            android:text="0"
            android:textSize="13sp"
            android:textColor="@color/color_status_bar"
            android:id="@+id/tv_opinion_feedback_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="/1000"
            android:textSize="13sp"
            android:layout_toRightOf="@id/tv_opinion_feedback_num"
            android:textColor="@color/color_edit_a_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
</RelativeLayout>
