<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="45dp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:id="@+id/iv_card_price_type"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:gravity="center"
        android:layout_toRightOf="@+id/iv_card_price_type"
        android:layout_toEndOf="@+id/iv_card_price_type"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:textSize="13sp"
        android:textColor="@color/black_d"
        android:id="@+id/tv_card_price_type"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="13sp"
        android:textColor="@color/color_status_bar"
        android:layout_marginRight="10dp"
        android:id="@+id/tv_card_price"/>

    <View
        android:id="@+id/shopping_prop_line_x"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/tv_card_price_type"
        android:background="@color/color_prop_line_a"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"/>
</RelativeLayout>