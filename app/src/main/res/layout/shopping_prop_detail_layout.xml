<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/activity_shopping_prop_detail"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lixiong.straight.my.prop.activity.ShoppingPropDetailActivity">

    <com.lixiong.straight.view.TopBar
        android:id="@+id/top_shopping_prop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <android.support.v4.widget.NestedScrollView android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:layout_marginBottom="44dp"
                                                android:id="@+id/nsv_shopping_prop_detail"
        android:background="@color/back_ground_color"
        android:layout_below="@id/top_shopping_prop">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/shopping_prop_price"/>

            <include layout="@layout/shopping_prop_description"/>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <TextView
        android:id="@+id/tv_shopping_prop_buy"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:text="购买"
        android:textColor="@color/white"
        android:background="@color/color_status_bar"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:textSize="16dp"/>
</RelativeLayout>
