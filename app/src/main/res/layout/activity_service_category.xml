<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/activity_service_category"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:top="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lixiong.straight.my.activity.ServiceCategoryActivity">

    <com.lixiong.straight.view.TopBar
        android:id="@+id/service_category_top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        top:tv_title="服务类目"/>

    <TextView
        android:id="@+id/tv_service_cate"
        android:text="一个服务商账号只提供一个服务类目,请慎重选择"
        android:layout_below="@id/service_category_top_bar"
        android:gravity="center"
        android:textSize="11sp"
        android:textColor="@color/color_service_cate_text"
        android:background="@color/color_service_cate_background"
        android:layout_width="match_parent"
        android:layout_height="30dp"/>

    <FrameLayout
        android:id="@+id/fl_service_category"
        android:layout_below="@id/tv_service_cate"
        android:layout_marginBottom="102dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <include layout="@layout/service_cate_bottom_layout"/>
</RelativeLayout>
