<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_margin="10dp"
                android:background="@drawable/prop_bg"
                android:layout_width="match_parent"
                android:layout_height="100dp">

    <RelativeLayout
        android:id="@+id/rl_no_photo"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_no_photo"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/photo"
            android:layout_marginLeft="10dp"/>
    </RelativeLayout>

    <TextView
        android:text="请完善您的个人资料"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textColor="@color/color_status_bar"
        android:gravity="center_vertical"
        android:layout_toRightOf="@+id/rl_no_photo"
        android:layout_marginLeft="10dp"
        android:id="@+id/tv_no_photo"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/eidt"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:id="@+id/iv_no_photo_a"/>

    <TextView
        android:visibility="gone"
        android:text="品牌设计"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/rl_no_photo"
        android:layout_toEndOf="@+id/rl_no_photo"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:textColor="@color/black_h"
        android:textSize="13sp"
        android:id="@+id/tv_imm_comm_c"/>

    <ImageView
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/location"
        android:layout_below="@+id/iv_no_photo_a"
        android:layout_alignLeft="@+id/tv_imm_comm_c"
        android:layout_alignStart="@+id/tv_imm_comm_c"
        android:id="@+id/iv_imm_com_a"/>

    <TextView
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iv_imm_com_a"
        android:layout_toEndOf="@+id/iv_imm_com_a"
        android:layout_marginLeft="6dp"
        android:layout_marginStart="6dp"
        android:textColor="@color/black_i"
        android:layout_below="@id/tv_imm_comm_c"
        android:layout_marginTop="4dp"
        android:textSize="12sp"
        android:id="@+id/tv_imm_comm_e"/>

    <TextView
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black_h"
        android:textSize="13sp"
        android:id="@+id/tv_imm_comm_d"
        android:layout_above="@+id/iv_no_photo_a"
        android:layout_alignLeft="@+id/tv_imm_comm_c"
        android:layout_alignStart="@+id/tv_imm_comm_c"/>
</RelativeLayout>