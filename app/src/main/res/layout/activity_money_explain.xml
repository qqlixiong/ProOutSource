<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/activity_money_explain"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back_ground_color"
    tools:context="com.lixiong.straight.my.transaction.MoneyExplainActivity">

    <com.lixiong.straight.view.TopBar
        android:id="@+id/top_money_explain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tv_title="牛币说明"/>

    <TextView
        android:text="牛币是什么?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top_money_explain"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="15sp"
        android:textColor="@color/color_status_bar"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="16dp"
        android:id="@+id/tv_money_a"/>

    <TextView
        android:text="牛币是小牛项目直包推出的平台币,用户需要充值获取,目前兑换比例1元=1牛币。\n牛币可以直接用于在道具商城中购买各种各样的实用道具和服务。因牛币为平台虚拟货币,故只能在平台内部消费。"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_money_a"
        android:layout_alignLeft="@+id/tv_money_a"
        android:layout_alignStart="@+id/tv_money_a"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:textSize="13sp"
        android:lineSpacingExtra="8dp"
        android:textColor="@color/black_x"
        android:id="@+id/tv_money_b"/>
</RelativeLayout>
