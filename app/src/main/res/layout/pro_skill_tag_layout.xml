<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/pro_item_bg"
                android:layout_height="wrap_content">

    <TextView
        android:text="技能标签:"
        android:textSize="16sp"
        android:textColor="@color/color_status_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:id="@+id/tv_skill_tag"/>

    <TextView
        android:visibility="gone"
        android:textColor="@color/color_my_text"
        android:background="@drawable/imm_com_et_bg"
        android:padding="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_skill_tag"
        android:layout_alignLeft="@+id/tv_skill_tag"
        android:layout_alignStart="@+id/tv_skill_tag"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/tv_skill_tag_a"/>

    <TextView
        android:visibility="gone"
        android:textColor="@color/color_my_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/imm_com_et_bg"
        android:padding="8dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/tv_skill_tag_b"
        android:layout_alignTop="@+id/tv_skill_tag_a"
        android:layout_toRightOf="@+id/tv_skill_tag_a"
        android:layout_toEndOf="@+id/tv_skill_tag_a"/>

    <TextView
        android:visibility="gone"
        android:textColor="@color/color_my_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/imm_com_et_bg"
        android:padding="8dp"
        android:layout_marginLeft="10dp"
        android:layout_alignBottom="@+id/tv_skill_tag_b"
        android:layout_toRightOf="@+id/tv_skill_tag_b"
        android:layout_toEndOf="@+id/tv_skill_tag_b"
        android:id="@+id/tv_skill_tag_c"/>
</RelativeLayout>