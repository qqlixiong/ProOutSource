<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/activity_pro_detail"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.lixiong.straight.project.activity.ProDetailActivity">

    <com.lixiong.straight.view.TopBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tv_title="项目详情"
        app:top_bar_type="pro_detail_page"
        android:id="@+id/pro_detail_title"/>

    <com.lixiong.straight.my.view.NoDataView
        android:visibility="gone"
        android:id="@+id/ndv_pro_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:tv_no_data_a="@string/no_data"/>

    <FrameLayout
        android:layout_weight="1"
        android:background="@color/color_message_line"
        android:id="@+id/fl_pro_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <TextView
        android:visibility="gone"
        android:id="@+id/tv_immediate_communication"
        android:text="立即沟通"
        android:textSize="16sp"
        android:textColor="#ffffff"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:background="@color/color_status_bar"
        android:layout_width="match_parent"
        android:layout_height="60dp"/>
</LinearLayout>
