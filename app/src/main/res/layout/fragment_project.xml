<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="@color/color_message_line"
             tools:context="com.lixiong.straight.project.fragment.ProjectFragment">

    <com.lixiong.straight.my.view.NoDataView
        android:visibility="gone"
        android:id="@+id/ndv_project"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:tv_no_data_a="@string/no_data"/>

    <FrameLayout
        android:id="@+id/fl_search_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <FrameLayout
        android:id="@+id/fl_head_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <FrameLayout
        android:id="@+id/fl_pro_list_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>
