<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/activity_search_result"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lixiong.straight.project.search.SearchResultActivity">

    <com.lixiong.straight.view.TopBar
        android:id="@+id/top_search_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tv_title="搜索结果"/>

    <com.lixiong.straight.my.view.NoDataView
        android:id="@+id/ndv_search_result"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/top_search_result"
        app:tv_no_data_a="@string/no_data"/>

    <FrameLayout
        android:visibility="gone"
        android:id="@+id/fl_search_result"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/top_search_result"/>
</RelativeLayout>
