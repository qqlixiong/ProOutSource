<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_height="55dp">

    <TextView
        android:text="密码"
        android:textSize="16sp"
        android:gravity="center_vertical"
        android:layout_width="60dp"
        android:layout_height="54dp"
        android:id="@+id/tv_pwd"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <EditText
        android:inputType="textPassword"
        android:layout_toRightOf="@id/tv_pwd"
        android:layout_marginLeft="24dp"
        android:hint="请输入密码"
        style="@style/cursor_edit_text"
        android:id="@+id/et_pwd"
        android:layout_alignBaseline="@+id/tv_pwd"
        android:layout_alignBottom="@+id/tv_pwd"/>

    <View
        android:layout_below="@id/tv_pwd"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_message_line"/>

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/hide"
        android:tag="@string/hide"
        android:padding="10dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="174dp"
        android:layout_marginStart="174dp"
        android:id="@+id/iv_hide"/>
</RelativeLayout>