<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/activity_about_us"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:top="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/back_ground_color"
    tools:context="com.lixiong.straight.my.settings.activity.AboutUsActivity">

    <com.lixiong.straight.view.TopBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        top:tv_title="关于我们"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/logo"
        android:layout_marginTop="100dp"
        android:id="@+id/iv_logo"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:src="@drawable/pro_straight_icon"/>

    <TextView
        android:text="v1.0.0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/color_version_num"
        android:layout_marginTop="15dp"
        android:gravity="center_horizontal"
        android:textSize="11sp"/>
</LinearLayout>
