<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/pro_item_bg"
                android:layout_height="wrap_content">

    <TextView
        android:text="个人介绍"
        android:textSize="16sp"
        android:textColor="@color/color_status_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:id="@+id/tv_personal_introduction"/>

    <View
        android:id="@+id/pro_detail_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_message_line"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/tv_personal_introduction"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/civ_personal"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_below="@id/pro_detail_line"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/color_text_b"
        android:layout_marginTop="20dp"
        android:layout_below="@id/pro_detail_line"
        android:layout_toRightOf="@+id/civ_personal"
        android:layout_toEndOf="@+id/civ_personal"
        android:layout_marginLeft="10dp"
        android:id="@+id/tv_pro_person_name"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="@color/black_e"
        android:layout_below="@id/tv_pro_person_name"
        android:layout_toRightOf="@+id/civ_personal"
        android:layout_toEndOf="@+id/civ_personal"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="6dp"
        android:id="@+id/tv_pro_person_ser_type"/>

    <ImageButton
        android:id="@+id/iv_follow"
        android:layout_width="60dp"
        android:layout_height="25dp"
        android:background="@android:color/transparent"
        android:layout_marginTop="27.5dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/pro_detail_line"/>

    <View
        android:id="@+id/pro_detail_line_z"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:background="@color/color_message_line"
        android:layout_below="@id/civ_personal"/>

    <TextView
        android:id="@+id/tv_person_intro_z"
        android:text="个人简介"
        android:textColor="@color/black_e"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/pro_detail_line_z"/>

    <me.codeboy.android.aligntextview.AlignTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_my_text"
        android:layout_marginRight="10dp"
        android:maxLines="3"
        android:layout_below="@id/tv_person_intro_z"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/tv_person_describe"/>

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/xiala"
        android:padding="15dp"
        android:layout_below="@id/tv_person_describe"
        android:layout_centerHorizontal="true"
        android:id="@+id/iv_person_task_require_down"/>
</RelativeLayout>