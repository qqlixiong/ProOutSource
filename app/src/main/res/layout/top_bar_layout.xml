<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="@dimen/title_height"
                android:gravity="center_vertical"
                android:background="@color/color_status_bar">

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/rl_chitchat"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_title_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textColor="@android:color/white"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tv_title_skill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_title_name"
            android:layout_centerInParent="true"
            android:textColor="@android:color/white"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_title"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:visibility="gone"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:padding="7dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        android:id="@+id/iv_top_a"/>

    <ImageView
        android:visibility="gone"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:padding="7dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/iv_top_a"
        android:layout_toStartOf="@+id/iv_top_a"
        android:layout_marginRight="8dp"
        android:id="@+id/iv_top_b"/>

    <RelativeLayout
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:id="@+id/rl_top_back">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iv_top_back"
            android:src="@drawable/icon_btn_back_white"/>
    </RelativeLayout>

    <RelativeLayout
        android:visibility="gone"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:id="@+id/rl_save">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iv_save"
            android:src="@drawable/normal"/>
    </RelativeLayout>

    <TextView
        android:visibility="gone"
        android:id="@+id/tv_save"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:text="@string/save"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="16sp"/>
</RelativeLayout>